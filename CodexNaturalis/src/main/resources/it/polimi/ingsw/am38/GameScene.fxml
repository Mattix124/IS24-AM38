        <ColumnConstraints minWidth="900.0" percentWidth="57.0"/>
        <ColumnConstraints fillWidth="false" halignment="CENTER" hgrow="ALWAYS" minWidth="40.0" percentWidth="1.0"
                           prefWidth="100.0"/>
        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" minWidth="40.0" percentWidth="23.0" prefWidth="100.0"/>
        <ColumnConstraints fillWidth="false" halignment="CENTER" hgrow="ALWAYS" minWidth="40.0" percentWidth="1.0"/>
        <ColumnConstraints halignment="CENTER" hgrow="NEVER" minWidth="260.0" percentWidth="23.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="310.0" percentHeight="33.0"/>
        <RowConstraints fillHeight="false" minHeight="380.0" percentHeight="1.0" prefHeight="30.0"/>
        <RowConstraints minHeight="380.0" percentHeight="33.0"/>
        <RowConstraints fillHeight="false" minHeight="25.0" percentHeight="1.0" prefHeight="30.0" valignment="CENTER"
                        vgrow="ALWAYS"/>
        <RowConstraints minHeight="270.0" percentHeight="32.0"/>
    </rowConstraints>
    <ScrollPane fx:id="fieldScrollPane" hbarPolicy="NEVER" pannable="true" vbarPolicy="NEVER" GridPane.rowSpan="3"/>
    <Button fx:id="centerField" alignment="TOP_LEFT" contentDisplay="CENTER" defaultButton="true"
            mnemonicParsing="false" onAction="#centerView" text="Center View" GridPane.valignment="TOP">
        <GridPane.margin>
            <Insets left="10.0" top="10.0"/>
        </GridPane.margin>
    </Button>
    <VBox alignment="CENTER_LEFT" focusTraversable="true" prefHeight="336.0" prefWidth="787.0" GridPane.columnSpan="3"
          GridPane.rowIndex="4">
        <GridPane.margin>
            <Insets top="20.0"/>
        </GridPane.margin>
        <Label text="Your Hand">
            <font>
                <Font name="Script MT Bold" size="25.0"/>
            </font>
        </Label>
        <HBox fx:id="handBox" alignment="CENTER_LEFT" focusTraversable="true" VBox.vgrow="ALWAYS"/>
    </VBox>
    <VBox alignment="TOP_CENTER" GridPane.columnIndex="4">
        <Label text="Chat">
            <font>
                <Font name="Script MT Bold" size="25.0"/>
            </font>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </Label>
        <ScrollPane fx:id="chatScrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" minHeight="240.0"
                    minWidth="240.0" vbarPolicy="NEVER">
