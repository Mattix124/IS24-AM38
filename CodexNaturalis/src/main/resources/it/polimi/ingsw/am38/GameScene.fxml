                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </VBox.margin>
            <VBox fx:id="chatArea" alignment="TOP_CENTER" prefHeight="300.0" prefWidth="300.0"/>
        </ScrollPane>
        <TextArea fx:id="chatIn" maxHeight="25.0" minHeight="25.0" minWidth="240.0" onKeyTyped="#sendChatMessage">
            <VBox.margin>
                <Insets bottom="5.0" left="10.0" right="10.0" top="15.0"/>
            </VBox.margin>
        </TextArea>
    </VBox>
    <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="2">
        <children>
            <Label text="Resource Deck">
                <font>
                    <Font name="Script MT Bold" size="25.0"/>
                </font>
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </Label>
            <VBox prefHeight="200.0" prefWidth="100.0"/>
        </children>
    </VBox>
    <ImageView fx:id="border1" disable="true" fitHeight="690.0" fitWidth="230.0" nodeOrientation="RIGHT_TO_LEFT"
               pickOnBounds="true" preserveRatio="true" smooth="false" GridPane.columnIndex="1" GridPane.rowSpan="3">
        <GridPane.margin>
            <Insets left="30.0"/>
        </GridPane.margin>
    </ImageView>
    <ImageView fx:id="border3" disable="true" fitHeight="67.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true"
               rotate="87.0" scaleX="-0.75" GridPane.columnIndex="3" GridPane.hgrow="ALWAYS" GridPane.rowIndex="4"
               GridPane.vgrow="ALWAYS">
        <GridPane.margin>
            <Insets bottom="20.0"/>
        </GridPane.margin>
        <effect>
            <Bloom/>
        </effect>
    </ImageView>
    <ImageView fx:id="border2" disable="true" fitHeight="160.0" fitWidth="150.0" pickOnBounds="true"
               preserveRatio="true" scaleY="0.5" smooth="false" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS"
               GridPane.rowIndex="3" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
        <GridPane.margin>
            <Insets bottom="15.0" left="20.0"/>
        </GridPane.margin>
    </ImageView>
    <ImageView fx:id="border4" disable="true" fitHeight="50.0" fitWidth="100.0" nodeOrientation="INHERIT"
               pickOnBounds="true" preserveRatio="true" scaleY="0.8" smooth="false" GridPane.columnIndex="4"
               GridPane.rowIndex="3">
        <effect>
            <Bloom/>
        </effect>
        <cursor>
            <Cursor fx:constant="TEXT"/>
        </cursor>
    </ImageView>
    <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="2" GridPane.rowIndex="2">
        <children>
            <Label text="Resource Deck">
                <font>
                    <Font name="Script MT Bold" size="25.0"/>
                </font>
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </Label>
            <VBox prefHeight="200.0" prefWidth="100.0"/>
        </children>
    </VBox>
    <Pane fx:id="backPanePlayersAndScore" GridPane.columnIndex="4" GridPane.halignment="CENTER" GridPane.rowIndex="2"
          GridPane.valignment="CENTER">
        <children>
            <VBox fx:id="box1p" alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="257.0" prefWidth="321.0">
                <children>
                    <Label contentDisplay="CENTER" prefHeight="32.0" prefWidth="258.0" text="Players and Scoreboard"
                           VBox.vgrow="ALWAYS">
                        <font>
                            <Font name="Script MT Bold" size="25.0"/>
                        </font>
                    </Label>
                    <HBox fx:id="box2p" alignment="CENTER" VBox.vgrow="ALWAYS">
                        <children>
                            <VBox fx:id="playerBox" alignment="CENTER" spacing="25.0">
                                <children>
                                    <Button fx:id="pippo" mnemonicParsing="false" text="Button"/>
                                    <Button fx:id="resetCardsButton" mnemonicParsing="false" text="Button"/>
                                    <Button fx:id="putCardButton" mnemonicParsing="false" text="Button"/>
                                </children>
                            </VBox>
                            <VBox fx:id="scoreBox" alignment="CENTER" minHeight="70.0" minWidth="30.0"
                                  prefHeight="125.0" prefWidth="176.0" HBox.hgrow="ALWAYS">
                                <children>
                                    <Pane fx:id="scorePanel" VBox.vgrow="ALWAYS"/>
                                </children>
                            </VBox>
                        </children>
                    </HBox>
                </children>
            </VBox>
        </children>
    </Pane>
    <Pane fx:id="backPaneObjective" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="4"
          GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="4" GridPane.valignment="CENTER"
          GridPane.vgrow="ALWAYS">
        <children>
            <VBox fx:id="objBox" alignment="TOP_CENTER" minHeight="90.0" minWidth="50.0" prefHeight="207.0"
                  prefWidth="205.0">
                <children>
                    <Label text="Objective">
                        <font>
                            <Font name="Script MT Bold" size="25.0"/>
                        </font>
                        <VBox.margin>
                            <Insets top="30.0"/>
                        </VBox.margin>
                    </Label>
                    <HBox fx:id="objectiveContainer" alignment="CENTER" VBox.vgrow="SOMETIMES"/>
                </children>
            </VBox>
        </children>
    </Pane>
</GridPane>
